{
    "name": "lva-edge-vscode-extension",
    "description": "LVA Edge VS Code Extension",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Azure",
        "Extension Packs"
    ],
    "activationEvents": [
        "onCommand:lvaTopologyEditor.start",
        "onWebviewPanel:lvaTopologyEditor",
        "onView:moduleExplorer",
        "onCommand:moduleExplorer.refresh"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Azure/lva-edge-vscode-extension"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "lvaTopologyEditor.start",
                "title": "%lva-edge.command.openSampleGraph.title%",
                "category": "%lva-edge.command.category%"
            },
            {
                "command": "moduleExplorer.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "dark": "ext/resources/dark/refresh.svg",
                    "light": "ext/resources/light/refresh.svg"
                }
            },
            {
                "command": "moduleExplorer.deleteHubItem",
                "title": "delete hub"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "moduleExplorer",
                    "name": "%lva-edge.views.moduleExplorer.name%"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "moduleExplorer.refreshEntry",
                    "when": "view == moduleExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "moduleExplorer.deleteHubItem",
                    "when": "view == moduleExplorer && viewItem == hubItemContext",
                    "group": "inline"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "moduleExplorer",
                "contents": "No Azure IoT Hub connection string has been provided.\n[Enter Connection String](command:moduleExplorer.setConnectionString)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm run compile-react && npm run compile-ext",
        "compile-react": "react-scripts build",
        "compile-ext": "tsc -p tsconfig.ext.json",
        "dev": "react-scripts start",
        "lint": "eslint . --ext .ts,.tsx",
        "create-definitions": "tsc -p tsconfig.definitiongen.json && node ./definition-generator/tools/definition-generator/entry.js",
        "refreshVSToken": "vsts-npm-auth -config .npmrc"
    },
    "dependencies": {
        "@vienna/react-dag-editor": "^1.73.0",
        "azure-iothub": "^1.12.4",
        "dagre": "^0.8.5",
        "eslint": "^6.8.0",
        "lodash": "^4.17.19",
        "office-ui-fabric-react": "^7.117.1",
        "react": "^16.13.1",
        "react-accessible-tree": "^1.0.3",
        "react-dom": "^16.13.1",
        "react-scripts": "^3.4.1"
    },
    "devDependencies": {
        "@types/dagre": "^0.7.44",
        "@types/lodash": "^4.14.155",
        "@types/uuid": "^8.0.0",
        "@types/node": "^12.12.0",
        "@types/react": "^16.9.36",
        "@types/react-dom": "^16.9.8",
        "@types/vscode": "^1.38.0",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "typescript": "^3.9.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
