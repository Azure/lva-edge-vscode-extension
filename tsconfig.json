{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2019",
        "lib": ["ES2019", "DOM"],
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "rootDir": "src",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["Tools", "Extension"]
}
